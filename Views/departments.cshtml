<h1>University Registrar</h1>
@if(@Model.Count != 0)
{
  @foreach(var department in Model)
  {
    <ul>
      <li><a href="departments/@department.GetId()">@department.GetName()</a> | <a href="/departments/edit/@department.GetId()">Edit</a> | <a href="/departments/delete/@department.GetId()">Delete</a> </li>
    </ul>
  }
  <form action="/departments/cleared" method="post">
    <button type="submit">Clear all departments</button>
  </form>
}
else
{
  <h2>There is no thing here!</h2>
}
<p>
  <a href="/departments/new">Add a new department</a>
</p>
<p><a href="/">Return Home</a></p>
