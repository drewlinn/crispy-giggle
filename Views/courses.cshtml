<h1>University Registrar</h1>
@if(@Model.Count != 0)
{
  @foreach(var course in Model)
  {
    <ul>
      <li><a href="courses/@course.GetId()">@course.GetName()</a> | <a href="/courses/edit/@course.GetId()">Edit</a> | <a href="/courses/delete/@course.GetId()">Delete</a> </li>
    </ul>
  }
  <form action="/courses/cleared" method="post">
    <button type="submit">Clear all courses</button>
  </form>
}
else
{
  <h2>There is no thing here!</h2>
}
<p><a href="/">Return Home</a></p>
<p>
  <a href="/courses/new">Add a new course</a>
</p>
