<h1>Edit Course</h1>
<hr />
<h2>Edit course: @Model.GetName()</h2>
<form action="/courses/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="courses-id" type="hidden" value="@Model.GetId()">
  <label for="name">Course name</label>
  <input id="name" name="name" type="text">
  <label for="number">Course Number</label>
  <input id="number" name="number" type="text">
  <label for="completion">Course Completion</label>
  <input id="completion" name="completion" type="text">
  <label for="grade">Course Grade</label>
  <select name="grade">
      <option value="A">A</option>
      <option value="B">B</option>
      <option value="C">C</option>
      <option value="D">D</option>
      <option value="F">F</option>
      <option value="Pass">Pass</option>
      <option value="No Pass">No Pass</option>
      <option value="N/A">Not Appliccable</option>
  </select>
  <button type="submit">Submit</button>
</form>
<h4><a href="/">Return home</a></h4>
